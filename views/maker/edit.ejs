<%- include('../partials/head') %>

    

    <form action="/maker/<%= character.id %>?_method=PATCH" method="post">
        
        <div class="d-flex m-3 flex-column w-50 around">
        
            <section class="mb-2">
                <label for="name" class="form-label ">Character Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="name" max="8" required value="<%= character.name %>">

                
            </section>

            <section class="mb-2">
                <label for="attack" class="form-label " >Attack:</label>
                <input type="number" id="attack" name="attack" placeholder="attack" class="form-control" max="100" required value="<%= character.attack %>">
            </section>

            <section class="mb-2">
                <label for="defense" class="form-label ">Defense:</label>
                <input type="number" id="defense" name="defense" placeholder="defense" class="form-control" max="100" required value="<%= character.defense %>">
            </section class="mb-2">

            <section class="mb-2">
                <label for="health" class="form-label ">Health:</label>
                <input type="number" id="health" name="health" placeholder="health" class="form-control" max="100" required value="<%= character.health %>">
            
            </section>

            <section class="mb-2">
                <label for="description" class="form-label ">Description</label>
                <input type="text" name="description" id="description" class="form-control" placeholder="type here.." max="25" required value="<%= character.description %>">

                
            </section>

            <div class="d-flex flex-row">
                <button class="btn btn-success me-2 w-25 mb-3">Save</button>

                <form action="/maker/<%= character.id %>" method="get">
                    <button class="btn btn-danger me-2 w-25 mb-3">Cancel</button>
                </form>
            </div>

        </div>

       
    </form>

    
    
    <%- include('../partials/footer') %>