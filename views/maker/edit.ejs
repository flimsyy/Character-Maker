<%- include('../partials/head') %>

    
<form action="/maker/<%= character.id %>?_method=PATCH" method="post">
    <div class="container-fluid">
        <div class="row justify-content-center m-3">
            <!-- Form inputs -->
            <div class="col-lg-8 col-md-10 col-sm-12 mb-4">
                <section class="mb-2">
                    <label for="name" class="form-label">Character Name:</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="name" maxlength="8" required value="<%= character.name %>">
                </section>

                <section class="mb-2">
                    <label for="attack" class="form-label">Attack:</label>
                    <input type="number" id="attack" name="attack" placeholder="attack" class="form-control" max="100" required value="<%= character.attack %>">
                </section>

                <section class="mb-2">
                    <label for="defense" class="form-label">Defense:</label>
                    <input type="number" id="defense" name="defense" placeholder="defense" class="form-control" max="100" required value="<%= character.defense %>">
                </section>

                <section class="mb-2">
                    <label for="health" class="form-label">Health:</label>
                    <input type="number" id="health" name="health" placeholder="health" class="form-control" max="100" required value="<%= character.health %>">
                </section>

                <section class="mb-2">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" name="description" id="description" class="form-control" placeholder="type here.." maxlength="25" required value="<%= character.description %>">
                </section>
            </div>

            <!-- Character avatar -->
            <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center align-items-center mb-4">
                <img src="https://api.dicebear.com/9.x/adventurer/svg" class="img-fluid rounded" alt="Character Avatar">
            </div>
        </div>

        <!-- Save and Cancel buttons -->
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-between mb-3">
                <button class="btn btn-success w-100 me-2">Save</button>
                <a href="/maker/<%= character.id %>" class="btn btn-danger w-100">Cancel</a>
            </div>
        </div>
    </div>
</form>

    
    <%- include('../partials/footer') %>