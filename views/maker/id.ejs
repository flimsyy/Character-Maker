<%- include('../partials/head') %>
    <div class="d-flex container-fluid flex-row">
        <div class="d-flex container-fluid m-3 flex-column">
            <strong>Name: </strong><%= character.name %>
            
            <strong> Attack: </strong><%= character.attack %>
            
            <strong> Defense: </strong><%= character.defense %>
            
            <strong> Health: </strong><%= character.health %>
            
            <strong> Description: </strong><%= character.description %>

        </div>

        <div class="d-flex container-fluid w-25">
            <img src="https://api.dicebear.com/9.x/adventurer/svg" alt="Character Avatar">
        </div>

    </div>

    <div class="d-flex m-3 ms-4">

        <form action="/maker/<%= character.id %>/edit">
            <button class="btn btn-success me-2">Edit</button>
        </form>
        <form action="/maker/<%= character.id %>?_method=DELETE" method="post">
            <button class="btn btn-danger me-2">Delete</button>
        </form>

        <form action="/maker" method="get">
        <button class="btn btn-primary me-2">Back to Home</button>
        </form>

    </div>


    <%- include('../partials/footer') %>