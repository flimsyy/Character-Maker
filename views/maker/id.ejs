<%- include('../partials/head') %>
<div class="container-fluid mt-4 ms-4">
    <div class="row">
        <!-- Character Details -->
        <div class="col-md-8 col-lg-6 mb-3">
            <div class="d-flex flex-column">
                <strong>Name:</strong> <%= character.name %>
                <strong>Attack:</strong> <%= character.attack %>
                <strong>Defense:</strong> <%= character.defense %>
                <strong>Health:</strong> <%= character.health %>
                <strong>Description:</strong> <%= character.description %>
            </div>
        </div>

        <!-- Character Avatar -->
        <div class="col-md-4 col-lg-3 mb-3">
            <img src="https://api.dicebear.com/9.x/adventurer/svg" alt="Character Avatar" class="img-fluid">
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex flex-column flex-md-row mb-3">
        <form action="/maker/<%= character.id %>/edit" class="me-2">
            <button class="btn btn-success mb-2 mb-md-0">Edit</button>
        </form>
        <form action="/maker/<%= character.id %>?_method=DELETE" method="post" class="me-2">
            <button class="btn btn-danger mb-2 mb-md-0">Delete</button>
        </form>
        <form action="/maker" method="get">
            <button class="btn btn-primary">Back to Home</button>
        </form>
    </div>
</div>


    <%- include('../partials/footer') %>